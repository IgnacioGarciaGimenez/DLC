<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="IndexPU">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>utn.dlc.tpindexado.dominio.Documento</class>
        <class>utn.dlc.tpindexado.dominio.Termino</class>
        <class>utn.dlc.tpindexado.dominio.Posteo</class>
        <!--provider>org.hibernate.jpa.HibernatePersistenceProvider</provider-->
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/dlc"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="root"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
        </properties>
    </persistence-unit>
</persistence>
